generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") 
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Artwork {
  id Int @id @default(autoincrement())
  name String
  coverImage String
  materialType String
  dimensions String
  creationDate DateTime
}

model Users {
  id Int @id @default(autoincrement())
  userName String @unique
  password String
}
